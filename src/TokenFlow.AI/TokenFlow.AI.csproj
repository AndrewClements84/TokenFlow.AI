<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <AssemblyName>TokenFlow.AI</AssemblyName>
    <RootNamespace>TokenFlow.AI</RootNamespace>

    <!-- NuGet package identity -->
    <PackageId>TokenFlow.AI</PackageId>
    <Version>0.7.1</Version>
    <Authors>Andrew Clements</Authors>
    <Company>Andrew Clements</Company>
    <Product>TokenFlow.AI</Product>

    <!-- Package metadata -->
    <Description>
      TokenFlow.AI — A lightweight .NET library for tokenization, chunking, and cost estimation across modern LLMs
      (OpenAI GPT-4o, Claude, Azure OpenAI).

      v0.7.0 introduces:
      • CLI v3.0 alignment with unified cost analysis commands
      • Flow.AI.Core model registry integration
      • Dynamic cost estimation with fallback handling
      • Optional benchmark regression tracking in CI/CD

      Part of the Flow.AI ecosystem — the engine powering PromptStream.AI and related frameworks.
    </Description>

    <PackageTags>
      tokenization; llm; openai; gpt; azure-openai; anthropic; cost-estimation; tokenizer; promptstream; ai; cli; benchmarkdotnet; dotnet; csharp
    </PackageTags>
    <RepositoryUrl>https://github.com/AndrewClements84/TokenFlow.AI</RepositoryUrl>
    <PackageProjectUrl>https://github.com/AndrewClements84/TokenFlow.AI</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryType>git</RepositoryType>

    <!-- Build & publish settings -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>..\..\artifacts</PackageOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <IncludeBuildOutput>true</IncludeBuildOutput>

    <!-- Optional but nice-to-have -->
    <NeutralLanguage>en</NeutralLanguage>
    <!-- <Copyright>© 2025 Andrew Clements</Copyright> -->
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\assets\logo.png" Pack="true" PackagePath="" />
    <None Include="..\..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Flow.AI.Core" Version="0.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

	<ItemGroup>
	  <PackageReference Include="System.Text.Json" Version="9.0.9" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TokenFlow.Core\TokenFlow.Core.csproj" />
    <ProjectReference Include="..\TokenFlow.Tokenizers\TokenFlow.Tokenizers.csproj" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Include="Data\models.data" />
  </ItemGroup>

</Project>
