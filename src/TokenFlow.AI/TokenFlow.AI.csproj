<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <AssemblyName>TokenFlow.AI</AssemblyName>
    <RootNamespace>TokenFlow.AI</RootNamespace>

    <!-- NuGet package identity -->
    <PackageId>TokenFlow.AI</PackageId>
    <Version>0.4.0</Version>
    <Authors>Andrew Clements</Authors>
    <Company>Andrew Clements</Company>
    <Product>TokenFlow.AI</Product>

    <!-- Package metadata -->
    <Description>
      TokenFlow.AI — A lightweight .NET library for tokenization, chunking, and cost estimation
      across large language models such as OpenAI GPT-4o, Anthropic Claude, and Azure OpenAI.
      Includes CLI utilities, full ModelRegistry support, and real-time cost tracking.
    </Description>
    <PackageTags>
      tokenization;llm;gpt;ai;openai;anthropic;azure;nlp;tokens;cost-estimation;cli;benchmark;prompt-engineering
    </PackageTags>
    <RepositoryUrl>https://github.com/AndrewClements84/TokenFlow.AI</RepositoryUrl>
    <PackageProjectUrl>https://github.com/AndrewClements84/TokenFlow.AI</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryType>git</RepositoryType>

    <!-- Build & publish settings -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>..\..\artifacts</PackageOutputPath>

    <!-- Optional but nice-to-have -->
    <NeutralLanguage>en</NeutralLanguage>
    <!-- <Copyright>© 2025 Andrew Clements</Copyright> -->
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\assets\logo.png" Pack="true" PackagePath="" />
    <None Include="..\..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

	<ItemGroup>
	  <PackageReference Include="System.Text.Json" Version="9.0.9" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TokenFlow.Core\TokenFlow.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Include="Data\models.data" />
  </ItemGroup>

</Project>
